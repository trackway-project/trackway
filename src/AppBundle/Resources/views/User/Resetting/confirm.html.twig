{% extends "AppBundle::layoutLogin.html.twig" %}
{% form_theme form 'AppBundle:Form:adminLte.html.twig' %}

{% block content %}
    <p class="login-box-msg">{{ 'resetting.template.confirm.message'|trans }}</p>
    <form action="" method="post">
        {{ form_row(form._token) }}
        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="{{ 'user.entity.password'|trans }}" name="appbundle_resetting_confirm_form[password][first]" required="required" autofocus="autofocus"/>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            {{ form_errors(form.password.first) }}
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="{{ 'user.entity.passwordRepeat'|trans }}" name="appbundle_resetting_confirm_form[password][second]" required="required"/>
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            {{ form_errors(form.password.second) }}
        </div>
        <div class="row">
            <div class="col-xs-8">
            </div>
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat" name="appbundle_resetting_confirm_form[submit]">{{ 'resetting.template.confirm.submit'|trans }}</button>
            </div>
        </div>
    </form>

    <a href="{{ path('security_login') }}" class="text-center">{{ 'resetting.template.confirm.login'|trans }}</a>
{% endblock %}
