{% extends "AppBundle::layoutOffCanvasUser.html.twig" %}

{% block class %}profile{% endblock class %}

{% block titleOffCanvas %}
    <h1>{{ 'profile.template.show.title'|trans }}</h1>
{% endblock titleOffCanvas %}

{% block contentOffCanvas %}
    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'user.entity.username'|trans }}</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>{{ 'user.entity.email'|trans }}</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>{{ 'user.entity.activeTeam'|trans }}</th>
            <td>{{ entity.activeTeam }}</td>
        </tr>
        <tr>
            <th>{{ 'user.entity.locale'|trans }}</th>
            <td>{{ entity.locale|trans }}</td>
        </tr>
        </tbody>
    </table>
{% endblock contentOffCanvas %}

{% block sidebarOffCanvas %}
    {{ knp_menu_render(['AppBundle:Builder:userMenu', 'profile'], {}, 'appbundle_sidebar_renderer') }}
{% endblock sidebarOffCanvas %}
